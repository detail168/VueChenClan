@model ShoppingCart

<form method="post">
    <a asp-action="Index1" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-lg text-uppercase">
        <label style="font-size:larger" text-dark-160>回首頁</label>
    </a>
    <input hidden asp-for="ProductId" />
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h6 class="text-white fw-semibold text-uppercase">@Model.Product.Title</h6>          
                </div>
            </div>
        </div>
        <div class="card-body">                         
              <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 0) {
                            <div id="carouselExampleIndicators" class="carousel  slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">

                                    @foreach(var imageWithIndex in 
                                    Model.Product.ProductImages
                                   .Select((image, index) => new { Image = image, Index = index })) {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index" 
                                        class="@(imageWithIndex.Index==0?"active":"")" aria-current="true" aria-label="Slide 1"></button>
                                    }

                                   
                                </div>
                                <div class="carousel-inner">
                                    @foreach (var imageWithIndex in
                                   Model.Product.ProductImages
                                   .Select((image, index) => new { Image = image, Index = index })) {
                                        <div class="@(imageWithIndex.Index==0?"carousel-item active":"carousel-item")">
                                            <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                    </div>
                                   }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                        }

                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span style="font-size:larger" class="badge">@Model.Product.Category.Name</span>
                        </div>
                        <div class="row ">
                            <h6 class="text-dark fw-bolder ">活動簡介 : @Model.Product.ISBN</h6>
                        </div>
                        <div class="row ">
                            <h6 class="text-dark fw-bolder">
                                費用: 依主辧單位公佈為主                     
                              @*   <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                    <div>@Model.Product.ListPrice.ToString("c")</div>
                                </div> *@
                            </h6>
                        </div>                 
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm fw-bolder">主辦單位:@Html.Raw(Model.Product.Company.Name)</p>
                        </div>
@*                         <div class="row pl-2 my-3">
