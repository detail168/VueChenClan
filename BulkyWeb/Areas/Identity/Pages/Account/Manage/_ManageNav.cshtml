@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column fw-bolder">
    <li class="nav-item fw-bolder"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">個人資料</a></li>
    <li class="nav-item fw-bolder"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">電子郵件</a></li>
    <li class="nav-item fw-bolder"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">密碼</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item fw-bolder"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">外部登入</a></li>
    }
    <li class="nav-item fw-bolder"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">雙重要素驗證</a></li>
    <li class="nav-item fw-bolder"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">個人資料</a></li>
</ul>
