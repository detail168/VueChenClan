@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "刪除個人數據";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>刪除此資料將永久刪除你的帳戶，並且無法恢復.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="請輸入您的密碼。" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">刪除資料並關閉我的帳戶</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
